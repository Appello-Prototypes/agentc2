{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components/*": "./src/components/*.tsx",
    "./components/canvas": "./src/components/canvas/index.ts",
    "./lib/*": "./src/lib/*.ts",
    "./hooks/*": "./src/hooks/*.tsx",
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "fix-imports": "if [ -d '@/components' ]; then mv @/components/* src/components/ 2>/dev/null || true; rm -rf @; fi && find src/components -name '*.tsx' -type f -exec sed -i '' -e 's|from \"@/lib/utils\"|from \"../lib/utils\"|g' -e 's|from \"@/components/\\([^\"]*\\)\"|from \"./\\1\"|g' -e 's|from \"@/hooks/\\([^\"]*\\)\"|from \"../hooks/\\1\"|g' {} +",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@repo/auth": "workspace:*",
    "@streamdown/cjk": "^1.0.1",
    "@streamdown/code": "^1.0.1",
    "@streamdown/math": "^1.0.1",
    "@streamdown/mermaid": "^1.0.1",
    "ai": "^6.0.66",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "shadcn": "^3.7.0",
    "shiki": "^3.22.0",
    "streamdown": "^2.1.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "use-stick-to-bottom": "^1.1.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "^8.6.15",
    "@storybook/theming": "^8.6.14",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "storybook": "8.6.14",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
