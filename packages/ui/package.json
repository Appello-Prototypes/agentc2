{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components/*": "./src/components/*.tsx",
    "./lib/*": "./src/lib/*.ts",
    "./hooks/*": "./src/hooks/*.tsx",
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "fix-imports": "find src/components -name '*.tsx' -type f -exec sed -i '' -e 's|from \"@/lib/utils\"|from \"../lib/utils\"|g' -e 's|from \"@/components/\\([^\"]*\\)\"|from \"./\\1\"|g' -e 's|from \"@/hooks/\\([^\"]*\\)\"|from \"../hooks/\\1\"|g' {} +"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "next-themes": "^0.4.6",
    "shadcn": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
