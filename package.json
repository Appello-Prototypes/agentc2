{
  "name": "catalyst-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "predev": "./scripts/check-caddy-setup.sh",
    "dev": "turbo dev",
    "dev:local": "turbo dev --filter=!caddy",
    "caddy:start": "./scripts/start-caddy.sh",
    "caddy:stop": "./scripts/stop-caddy.sh",
    "caddy:reload": "caddy reload --config ./apps/caddy/Caddyfile --adapter caddyfile",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "format": "prettier --write .",
    "add-shadcn": "./scripts/add-shadcn.sh",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:ui": "playwright test --ui",
    "test:e2e:playwright:headed": "playwright test --headed",
    "test:e2e:playwright:debug": "playwright test --debug"
  },
  "overrides": {
    "@mastra/core": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.2.3",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "quansync": "^0.2.11",
    "shadcn": "^3.7.0",
    "turbo": "^2.3.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  }
}
