{
  "name": "catalyst-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "predev": "./scripts/check-caddy-setup.sh",
    "dev": "turbo dev",
    "dev:local": "turbo dev --filter=!caddy",
    "caddy:start": "./scripts/start-caddy.sh",
    "caddy:stop": "./scripts/stop-caddy.sh",
    "caddy:reload": "caddy reload --config ./apps/caddy/Caddyfile --adapter caddyfile",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "format": "prettier --write .",
    "add-shadcn": "./scripts/add-shadcn.sh"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn": "^3.7.0",
    "turbo": "^2.3.3"
  }
}
