# Production Caddyfile for Digital Ocean Deployment
#
# Features:
# - Automatic HTTPS via Let's Encrypt
# - All traffic routes to agent app (port 3001)
# - Long connection timeouts for SSE and agent executions
# - Security headers
# - Compression
#
# This file is automatically deployed by the CI/CD pipeline

mastra.useappello.app {
    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # HSTS - Force HTTPS for 1 year
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # All traffic routes to agent app (primary app on port 3001)
    # Long timeouts for agent executions and SSE streams
    handle {
        reverse_proxy localhost:3001 {
            # Long timeouts for agent executions (5 minutes)
            transport http {
                read_timeout 300s
                write_timeout 300s
            }
        }
    }

    # Access logging
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
    }
}

# Redirect www to non-www
www.mastra.useappello.app {
    redir https://mastra.useappello.app{uri} permanent
}
