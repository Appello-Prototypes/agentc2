# Production Caddyfile for Digital Ocean Deployment
#
# Features:
# - Automatic HTTPS via Let's Encrypt
# - All traffic routes to agent app (port 3001)
# - Long connection timeouts for SSE and agent executions
# - Security headers
# - Compression
#
# This file is automatically deployed by the CI/CD pipeline

agentc2.ai {
    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # HSTS - Force HTTPS for 1 year
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # Public landing page — route to agent app (server-rendered welcome page)
    @landing_page {
        expression `{http.request.uri.path} == "/"`
    }

    handle @landing_page {
        reverse_proxy localhost:3001 {
            flush_interval -1
        }
    }

    # SEO files — route to frontend app (sitemap.xml, robots.txt)
    @seo_files {
        path /sitemap.xml /robots.txt
    }

    handle @seo_files {
        reverse_proxy localhost:3000
    }

    # Public legal pages — route to frontend app (no auth required)
    @public_legal {
        path /terms /privacy /security /about /trust-center /subprocessors /ai-transparency
    }

    handle @public_legal {
        reverse_proxy localhost:3000
    }

    # Public docs and blog pages — route to frontend app (no auth required)
    @public_content {
        path /docs /docs/* /blog /blog/*
    }

    handle @public_content {
        reverse_proxy localhost:3000
    }

    # Frontend static assets (namespaced via assetPrefix: '/_home')
    @frontend_assets {
        path /_home/*
    }

    handle @frontend_assets {
        reverse_proxy localhost:3000
    }

    # Admin portal routes to admin app (port 3003)
    @admin_routes {
        path /admin*
    }

    handle @admin_routes {
        reverse_proxy localhost:3003 {
            transport http {
                read_timeout 60s
                write_timeout 60s
            }
            flush_interval -1
        }
    }

    # Embed routes -- relax X-Frame-Options so external sites can iframe them
    @embed_routes {
        path /embed/* /embed-v2/*
    }

    handle @embed_routes {
        header X-Frame-Options ""
        header Content-Security-Policy "frame-ancestors *"
        reverse_proxy localhost:3001 {
            transport http {
                read_timeout 300s
                write_timeout 300s
            }
            flush_interval -1
        }
    }

    # All other traffic routes to agent app (primary app on port 3001)
    # Long timeouts for agent executions and SSE streams
    handle {
        reverse_proxy localhost:3001 {
            # Long timeouts for agent executions (5 minutes)
            transport http {
                read_timeout 300s
                write_timeout 300s
            }
            # CRITICAL: Disable buffering for SSE streams (real-time chat)
            flush_interval -1
        }
    }

    # Access logging
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
    }
}

# Redirect www to non-www
www.agentc2.ai {
    redir https://agentc2.ai{uri} permanent
}
